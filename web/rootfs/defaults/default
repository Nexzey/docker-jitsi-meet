server {
	listen 80{{ if .Env.ENABLE_PROXY_PROTOCOL | default "0" | toBool }} proxy_protocol{{ end }} default_server;
	
	{{ if .Env.ENABLE_IPV6 | default "1" | toBool }}
	listen [::]:80{{ if .Env.ENABLE_PROXY_PROTOCOL | default "0" | toBool }} proxy_protocol{{ end }} default_server;
	{{ end }}

	{{ if .Env.ENABLE_HTTP_REDIRECT | default "0" | toBool }}
	return 301 https://$host$request_uri;
	{{ else }}
	include /config/nginx/meet.conf;
	{{ end }}
}

{{ if not (.Env.DISABLE_HTTPS | default "0" | toBool) }}
server {
	listen 443 ssl{{ if .Env.ENABLE_HTTP2 | default "1" | toBool }} http2{{ end }}{{ if .Env.ENABLE_PROXY_PROTOCOL | default "0" | toBool }} proxy_protocol{{ end }};
	
	{{ if .Env.ENABLE_IPV6 | default "1" | toBool }}
	listen [::]:443 ssl{{ if .Env.ENABLE_HTTP2 | default "1" | toBool }} http2{{ end }}{{ if .Env.ENABLE_PROXY_PROTOCOL | default "0" | toBool }} proxy_protocol{{ end }};
	{{ end }}

	include /config/nginx/ssl.conf;
	include /config/nginx/meet.conf;
}
{{ end }}
